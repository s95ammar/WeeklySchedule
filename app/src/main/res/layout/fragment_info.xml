<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".views.fragments.InfoFragment">

	<TextView
		android:id="@+id/text_info_developer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="@string/developer"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/text_info_my_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:text="@string/my_name"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_info_developer" />

	<TextView
		android:id="@+id/text_info_start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="@string/development_start_date"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="@+id/text_info_developer"
		app:layout_constraintTop_toBottomOf="@+id/text_info_my_name" />

	<TextView
		android:id="@+id/text_info_start_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="@string/development_start_date_value"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_info_start" />

	<TextView
		android:id="@+id/text_info_hours"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="@string/hours_spent"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="@+id/text_info_developer"
		app:layout_constraintTop_toBottomOf="@+id/text_info_start_value" />

	<TextView
		android:id="@+id/text_info_hours_value"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="@string/hours_spent_value"
		android:textColor="@android:color/black"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_info_hours" />
</androidx.constraintlayout.widget.ConstraintLayout>