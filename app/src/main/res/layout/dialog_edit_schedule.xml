<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp">

	<TextView
		android:id="@+id/text_edit_schedule_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="@string/name"
		android:textColor="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/editText_edit_schedule_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:inputType="textShortMessage"
		android:maxLength="25"
		android:maxLines="1"
		android:selectAllOnFocus="true"
		app:layout_constraintEnd_toEndOf="@+id/text_edit_schedule_name"
		app:layout_constraintStart_toStartOf="@+id/text_edit_schedule_name"
		app:layout_constraintTop_toBottomOf="@+id/text_edit_schedule_name" />

</androidx.constraintlayout.widget.ConstraintLayout>